page {
  background-color: #FFFFFF;
  height: 100%;
}

.vtabs-left {
  height: 100%;
  background-color: rgb(238, 238, 238);
  height: 100rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.vtabs-content {
  margin-left: 20rpx;
  margin-right: 20rpx;
  width: 100%;
  margin-top: 20rpx;
  box-shadow: 0 0 10px rgb(238, 238, 238);
  padding: 10px;

}

c-text {
  font-size: small;
}

.k-content {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  flex-flow: wrap;
  justify-content: flex-start;
}

.k-content-item {
  flex: 0 0 calc((100% - 80rpx) / 2);
  height: 100rpx;
  /* background-color: rgb(255, 255, 255); */
  border-radius: 20rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
  border: solid 1rpx rgb(238, 238, 238);

}

.k-content-item2 {
  flex: 0 0 calc((100% - 80rpx) / 2);
  height: 100rpx;
  /* background-color: rgb(255, 255, 255); */
  background-color: RGB(170, 208, 228);
  border-radius: 20rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
  border: solid 1rpx rgb(238, 238, 238);

}

.k-content-text {
  height: 100rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-pack: justify;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;


}

